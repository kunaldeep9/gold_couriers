<p id="notice"><%= notice %></p>

<h1>Courier Details</h1>

<table>
  <thead>
    <tr>
      <th>Sender name</th>
      <th>Sender address</th>
      <th>Sender contact</th>
      <th>Sender pincode</th>
      <th>Receiver name</th>
      <th>Receiver address</th>
      <th>Receiver contact</th>
      <th>Receiver pincode</th>
      <th>Parcel weight</th>
      <th>Service type</th>
      <th>Service cost</th>
      <th>Payment mode</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courier_details.each do |courier_detail| %>
      <tr>
        <td><%= courier_detail.sender_name %></td>
        <td><%= courier_detail.sender_address %></td>
        <td><%= courier_detail.sender_contact %></td>
        <td><%= courier_detail.sender_pincode %></td>
        <td><%= courier_detail.receiver_name %></td>
        <td><%= courier_detail.receiver_address %></td>
        <td><%= courier_detail.receiver_contact %></td>
        <td><%= courier_detail.receiver_pincode %></td>
        <td><%= courier_detail.parcel_weight %></td>
        <td><%= courier_detail.service_type %></td>
        <td><%= courier_detail.service_cost %></td>
        <td><%= courier_detail.payment_mode %></td>
        <td><%= courier_detail.user_id %></td>
        <td><%= link_to 'Show', courier_detail %></td>
        <td><%= link_to 'Edit', edit_courier_detail_path(courier_detail) %></td>
        <td><%= link_to 'Destroy', courier_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

